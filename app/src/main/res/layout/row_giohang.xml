<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRowGioHang"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/tvNameRowGioHang"
            android:textSize="15sp"
            android:text="Tên sản phẩm"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView
            android:id="@+id/tvGiaRowGioHang"
            android:gravity="center_vertical"
            android:textColor="#ff0000"
            android:textSize="10sp"
            android:text="Giá"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:id="@+id/btTruRowGioHang"
                android:background="@drawable/button_tru"
                android:text="-"
                android:focusable="false"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btSoLuongRowGioHang"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_soluong"
                android:text="1"
                android:focusable="false"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <Button
                android:id="@+id/btCongRowGioHang"
                android:background="@drawable/button_cong"
                android:text="+"
                android:focusable="false"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>